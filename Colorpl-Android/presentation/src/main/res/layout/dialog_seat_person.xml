<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="18dp"
        android:background="@color/eerie_black">

        <TextView
            android:id="@+id/tv_person"
            style="@style/suite_extra_bold_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="인원"
            android:textSize="20dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@id/tv_confirm_person_count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_decrease"
            style="@style/suite_extra_bold_20"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"

            android:paddingStart="12dp"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_count"
            app:layout_constraintEnd_toStartOf="@id/tv_count"
            app:layout_constraintTop_toTopOf="@+id/tv_count" />

        <TextView
            android:id="@+id/tv_count"
            style="suite_extra_bold_20"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="@+id/tv_increase"
            app:layout_constraintEnd_toStartOf="@id/tv_increase"
            app:layout_constraintTop_toTopOf="@+id/tv_increase" />


        <TextView
            android:id="@+id/tv_increase"
            style="@style/suite_extra_bold_20"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:paddingEnd="18dp"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:layout_constraintBottom_toTopOf="@id/tv_confirm_person_count"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_confirm_person_count"
            style="@style/suite_semibold_20"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/imperial_red"
            android:gravity="center"
            android:text="좌석선택"
            android:textSize="20dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>